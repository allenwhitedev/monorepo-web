{
  "name": "server",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "prestart": "cp -r ../client/src/shared-client/* ./src/shared-client",
    "start": "NODE_ENV=development nodemon src/index.ts",
    "prebuild": "cp -r ../client/src/shared-client/* ./src/shared-client",
    "postbuild": "cp package.json ./build/ && cd build && yarn install --production=true",
    "build": "tsc --project ./"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.17.1",
    "moment": "2.29.1",
    "mongodb": "3.6.9"
  },
  "devDependencies": {
    "@types/bson": "4.2.0",
    "@types/cors": "2.8.10",
    "@types/express": "4.17.12",
    "@types/mongodb": "3.6.18",
    "@types/node": "15.12.4",
    "nodemon": "2.0.7",
    "ts-node": "10.0.0",
    "typescript": "4.3.4"
  }
}
